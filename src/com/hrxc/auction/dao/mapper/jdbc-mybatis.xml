<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="GoodsList" type="com.hrxc.auction.domain.GoodsList"/>
        <typeAlias alias="BargainRecord" type="com.hrxc.auction.domain.BargainRecord"/>
        <typeAlias alias="BiddingPaddle" type="com.hrxc.auction.domain.BiddingPaddle"/>
        <typeAlias alias="ClientSide" type="com.hrxc.auction.domain.ClientSide"/>
        <typeAlias alias="PaymentList" type="com.hrxc.auction.domain.PaymentList"/>
        <typeAlias alias="ProjectInfo" type="com.hrxc.auction.domain.ProjectInfo"/>
        <typeAlias alias="UserInfo" type="com.hrxc.auction.domain.UserInfo"/>
    </typeAliases>
    
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
                <property name ="poolMaximumActiveConnections" value="3"/>
                <property name ="poolMaximumIdleConnections" value="1"/>
            </dataSource>
        </environment>
    </environments>
    
    <mappers>
        <mapper resource="com/hrxc/auction/dao/mapper/GoodsListMapper.xml"/>
        <!--
        <mapper resource="com/hrxc/auction/dao/mapper/BargainRecordMapper.xml"/>
        <mapper resource="com/hrxc/auction/dao/mapper/BiddingPaddleMapper.xml"/>
        <mapper resource="com/hrxc/auction/dao/mapper/ClientSideMapper.xml"/>
        <mapper resource="com/hrxc/auction/dao/mapper/PaymentListMapper.xml"/>
        <mapper resource="com/hrxc/auction/dao/mapper/ProjectInfoMapper.xml"/>
        <mapper resource="com/hrxc/auction/dao/mapper/UserInfoMapper.xml"/>
        -->
    </mappers>
</configuration>